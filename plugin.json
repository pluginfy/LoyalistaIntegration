{
    "name"              :   "LoyalistaIntegration",
    "namespace"         :   "LoyalistaIntegration",
    "marketplaceName": {
        "de": "Loyalista Integration",
        "en": "Loyalista Integration"
    },
    "type"              :   "general",
    "version"           :   "1.5.2",
    "pluginIcon"        :   "icon_plugin_xs.png",
    "description"       :   "Allows you to easily integrate your Plentymarkets Shop with Loyalista..",
    "shortDescription": {
        "de": "Allows you to easily integrate your Plentymarkets Shop with Loyalista.",
        "en": "Allows you to easily integrate your Plentymarkets Shop with Loyalista."
    },
    "categories": ["3527"],
    "author"    :   "pluginfy",
    "authorIcon" :   "icon_pluginfy_xs.png",
    "email": "support@pluginfy.com",
    "phone": "+92 3004801494",
    "keywords": [
        "plugins",
        "loyalty",
        "loyalista",
        "integration",
        "points",
        "bonuses",
        "rewards",
        "discounts",
        "pluginfy"
    ],
    "serviceProvider"  :  "LoyalistaIntegration\\Providers\\LoyalistaIntegrationServiceProvider",
    "runOnBuild":[
        "LoyalistaIntegration\\Migrations\\CreateToDoTable" ,
        "LoyalistaIntegration\\Migrations\\CreateOrderSyncedTable"
    ],
    "dataProviders": [
        {
            "key": "LoyalistaIntegration\\Containers\\CutomerPoints",
            "name": "Customer Points/Rewards Widget",
            "description": "Loyalista Customer Points/Rewards Widget",
            "defaultLayoutContainer": "Ceres::SingleItem.BeforePrice"
        },
        {
            "key": "LoyalistaIntegration\\Containers\\CheckoutWidget",
            "name": "Checkout Redeem Widget ",
            "description": "Show Loyalista data on my checkout page",
            "defaultLayoutContainer": "Ceres::Checkout.AfterBasketTotals"
        },
        {
            "key": "LoyalistaIntegration\\Containers\\ProductWidget",
            "name": "Product Widget",
            "description": "Show Loyalista data on my single product page",
            "defaultLayoutContainer": "Ceres::SingleItem.BeforePrice"
        },
        {
            "key": "LoyalistaIntegration\\Containers\\CartProductWidget",
            "name": "Cart Product Widget",
            "description": "Show Loyalista data on my shopping cart page",
            "defaultLayoutContainer": "Ceres::SingleItem.BeforePrice"
        },
        {
            "key": "LoyalistaIntegration\\Containers\\MyAccountWidget",
            "name": "My Account Widget",
            "description": "Show Loyalista data on my account page",
            "defaultLayoutContainer": "Ceres::SingleItem.BeforePrice"
        },
        {
            "key": "LoyalistaIntegration\\Containers\\MyAccountMergeWidget",
            "name": "Account Merge Request Widget",
            "description": "Merge account option",
            "defaultLayoutContainer": "Ceres::SingleItem.BeforePrice"
        }
    ]
}